<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sonata.cache.counter.mongo.class">Sonata\Cache\Adapter\Counter\MongoCounter</parameter>
        <parameter key="sonata.cache.counter.memcached.class">Sonata\Cache\Adapter\Counter\MemcachedCounter</parameter>
        <parameter key="sonata.cache.counter.predis.class">Sonata\Cache\Adapter\Counter\PRedisCounter</parameter>
        <parameter key="sonata.cache.counter.apc.class">Sonata\Cache\Adapter\Counter\ApcCounter</parameter>
    </parameters>

    <services>
        <service id="sonata.cache.counter.mongo" class="sonata.cache.counter.mongo.class" >
            <tag name="sonata.cache.counter" />
            <argument type="collection" />
            <argument />
            <argument />
        </service>

        <service id="sonata.cache.counter.memcached" class="%sonata.cache.counter.memcached.class%" >
            <tag name="sonata.cache.counter" />
            <argument />
            <argument type="collection" />
        </service>

        <service id="sonata.cache.counter.predis" class="%sonata.cache.counter.predis.class%" >
            <tag name="sonata.cache.counter" />
            <argument type="collection" />
        </service>

        <service id="sonata.cache.counter.apc" class="%sonata.cache.counter.apc.class%" >
            <tag name="sonata.cache.counter" />
            <argument />
        </service>

    </services>
</container>
